footer
	background #F2F2F2
	border-top 2px solid white 
	font-size 12px
	font-family "Myriad Set Pro","Helvetica Neue","Helvetica","Arial",sans-serif
	max-width 1750px
	margin 0 auto  
	.container
		max-width 980px 
		padding 0 22px
		margin 0 auto 
		padding-top 32px 
		line-height 1.66667 
		.col
			width 20%
			float left
			h3
				color #333
				font-weight 600 
			ul
				li
					a  
						font-size 11px  
						color #666
						text-decoration none
					&:hover
						text-decoration underline
		.col3
			ul:nth-child(2)
				padding-bottom 20px 
		.col4
			ul:nth-child(2)
				padding-bottom 20px 
		.shop
			clear both
			padding-top 20px
			padding-bottom 5px 
			border-bottom 1px solid #E3E3E3
			text-decoration none
			font-size 11px 
			color #999
			a
				color #08c 
				&:hover
					color #333
					text-decoration underline
		.copyright
			padding-top 8px
			font-size 11px  
			clear both
			padding-bottom 24px
			color #999
			a
				color #666
				padding 0 10px
				border-right 1px solid #d6d6d6 
				&:hover
					text-decoration underline
					color #333 
			a:nth-child(1)
				padding-left 20px 
			a:nth-child(5)
				border-right 0 
			a:nth-child(6)
				float right
				border-right 0 
			img
				float right
 