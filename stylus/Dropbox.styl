.dropbox
	position relative
	height 700px 
	width 100%  
	background #F7F7F7
	overflow hidden
	max-width 1750px
	margin 0 auto 
	.background-box
		height 100% 
		width 1770px
		position absolute
		left 50%
		margin-left -885px  
		background url(img/dropboxBG.jpg)
		background-position right center
		background-size contain
		background-repeat no-repeat
	.content-container
		height 550px 
		max-width 990px
		position relative
		margin 0 auto
		padding 75px 20px
		.content
			max-width 403px  
			position absolute
			top 50% 
			transform translateY(-50%)
			font-family "Open Sans","lucida grande","Segoe UI",arial,verdana,"lucida sans unicode",tahoma,sans-serif
			h1
				color #47525d
				font-size 47.25px 
				font-weight 100
				margin-bottom 20px
				line-height 1.3  
			h2
				color #47525d
				margin-top 30px 
				padding-bottom 20px
				font-size 20px 
				font-weight 100 
				line-height 1.3  
			a.button
				width 45% 
				display block
				font-size 20px
				font-weight 500 
				color white 
				line-height 21px 
				background #0071E0 
				text-align center
				padding 19px 26px
				border 0
				border-radius 6px 
				text-decoration none
				margin-top 30px 
				margin-bottom 15px 
				&:hover
					background #3398EA 
			span
				a
					border-bottom 1px solid #0071e0
					color #0071E0  
					text-decoration none
a:-webkit-any-link
	text-decoration none 

			  
	
		    

