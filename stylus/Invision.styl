section.invision
	width 100%
	height 228px 
	background #323a45
	padding-top 160px
	padding-bottom 145px
	text-align center
	position relative
	max-width 1750px
	margin 0 auto 
	@media screen and (max-width: 1238px)
		padding-top 50px 
		height 338px 
	.invision-content
		margin 0 auto
		max-width 1320px 
		h2
			clear both
			font-family "Open Sans", "open-sans", sans-serif
			color #FFF 
			font-weight 300 
			font-size 30px 
			margin-bottom 65px 
			strong
				font-weight 600 	
		div 
			position relative
			float left
			font-family "Open Sans", "open-sans", sans-serif
			@media screen and (max-width: 1238px) 
				float none
				width 290px 
				margin 10px auto
			span
				width 24px
				height 24px
				position absolute
				background url(img/invision.png)
				top 18px
				left 15px
			.name
				background-position 0 -474px
			.mail
				background-position 0 -386px
			.pass
				background-position 0 -430px  
			input 
				width 215px
				height 25px 
				border-radius 3px
				padding 18px 15px 
				border 1px solid #d4d7da
				margin-right 10px 
				padding-left 48px 
				font-size 18px 
				color #8a959e
				&:focus
					outline none  
		.first
			margin-left 55px 
			@media screen and (max-width: 1238px)
				width 290px 
				margin 0 auto
		p
			margin-top 170px
			font-family "Open Sans", "open-sans", sans-serif
			display block 
			clear both
			color white
			font-size 12px 
			color #747c83
			a  
				color #747c83
				text-decoration underline
		.start
			color white 
			width 216px
			line-height 25px 
			height 25px
			border 0
			border-radius 5px  
			padding 21px 40px 19px 
			background #FF3366
			font-size 15px
			cursor pointer
			transition background 0.3s
			font-family "Open Sans", "open-sans", sans-serif
			font-weight 600
			@media screen and (max-width: 1238px)
				width 190px
				padding 21px 45px 19px 35px  
				margin 0 auto 
				margin-top 10px
				font-size 12px 
				width 205px   
			&:hover
				background #F42156
